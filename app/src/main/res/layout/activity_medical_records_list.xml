<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.medicalrecords.MedicalRecordsListActivity">

    <Button
        android:id="@+id/addMedicalRecordButton"
        android:layout_width="295dp"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:text="@string/add_medical_record"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/rv_medical_record_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_medical_record_list"
        android:layout_width="384dp"
        android:layout_height="526dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMedicalRecordButton" />

</androidx.constraintlayout.widget.ConstraintLayout>